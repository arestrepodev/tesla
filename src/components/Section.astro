---
const {color, title, subtitle, underlineSubtitle, id, isLastSection} = Astro.props;
const isLast = isLastSection ? 'pb-10' : 'pb-20';
const textUnderline = underlineSubtitle ? 'underline' : 'no-underline';
const textColor = `text-${color}`;
---
<section id={id} class="landing-section h-screen w-screen bg-black text-center relative overflow-hidden" data-header-color={color}>
  <div class="z-30 relative h-full w-full flex flex-col ">
    <header>
      <h2 class={`${textColor} pt-40 text-[40px] font-medium`}>{title}</h2>
      <p class={`${textColor} text-sm ${textUnderline}`}>{subtitle}</p>
    </header>
    <footer class={`flex flex-grow flex-nowrap justify-end flex-col ${isLast}`}>
      <slot name="footer"/>
    </footer>
  </div>
  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background"/>
  </div>
</section>